    "version": "0.2.0",
    "configurations": [
        {
            "name": "backend",
            "cwd": "backend",
            "request": "launch",
            "type": "dart",
            "program": "bin/server.dart"
        },
        {
            "name": "frontend web",
            "cwd": "frontend",
            "request": "launch",
            "type": "dart",
            "args": [
                "-d",
                "chrome",
                "--web-port",
                "8081"
            ]
        },
        {
            "name": "frontend (profile mode)",
            "cwd": "frontend",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "frontend (release mode)",
            "cwd": "frontend",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}